# Application Configuration
APP_NAME=Hospital-EMR-System
APP_ENV=development
APP_PORT=8080
APP_VERSION=1.0.0

# Database Configuration (Neon PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=emr_database
DB_SSLMODE=require
DB_MAX_CONNECTIONS=100
DB_MAX_IDLE_CONNECTIONS=10

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_HOURS=168

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=emr-cluster

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
ENCRYPTION_KEY=your_32_byte_encryption_key_here
MFA_ISSUER=Hospital-EMR
SESSION_TIMEOUT_MINUTES=30

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@hospital-emr.com

# External Integrations
ERP_API_URL=https://erp.hospital.com/api
ERP_API_KEY=your_erp_api_key
LIS_API_URL=https://lis.hospital.com/api
LIS_API_KEY=your_lis_api_key
RIS_API_URL=https://ris.hospital.com/api
RIS_API_KEY=your_ris_api_key

# FHIR Server
FHIR_SERVER_URL=https://fhir.hospital.com/r4

# Compliance
AUDIT_LOG_RETENTION_YEARS=25
DATA_ENCRYPTION_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
